<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;NET8.0;NET9.0</TargetFrameworks>
        <LangVersion>12.0</LangVersion>
        <RootNamespace>Proxoft.DocxToPdf</RootNamespace>
        <AssemblyName>Proxoft.DocxToPdf</AssemblyName>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
        <PackageId>DocxToPdf</PackageId>
        <Company>proxoft s.r.o.</Company>
        <Product>DocxToPdf</Product>
        <PackageIcon>Icon.png</PackageIcon>
        <BaseOutputPath>..\..\..\Build</BaseOutputPath>
        <PackageReadmeFile>README.md</PackageReadmeFile>
        <PackageTags>Docx; Pdf; Convert; DocxToPdf</PackageTags>
        <RepositoryUrl>https://github.com/proxoft/DocxToPdf</RepositoryUrl>
        <Description>Docx to Pdf converter written in pure C# and no external dependencies.</Description>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DocumentFormat.OpenXml" Version="2.13.1" />
        <PackageReference Include="PDFsharpNetStandard2" Version="1.51.4845" />
        <PackageReference Include="System.Text.Encoding.CodePages" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\Icons\Icon.png">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
        </None>
        <None Include="..\..\README.md">
          <Pack>True</Pack>
          <PackagePath>\</PackagePath>
        </None>
        <None Include="Resources\Icons\128x128 Transformer coloured final.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
